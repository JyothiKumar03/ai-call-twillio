{
  "name": "server-template",
  "version": "1.0.0",
  "main": "src/index.ts",
  "author": "prodgain.com",
  "scripts": {
    "start": "tsc && node -r tsconfig-paths/register -r ts-node/register/transpile-only .dist/src/index.js",
    "build": "rm -rf .dist && tsc",
    "dev": "nodemon src/index.ts",
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "format": "prettier --check .",
    "format:fix": "prettier --write .",
    "dock:dev": "docker compose up --watch app-dev",
    "dock:prod": "docker compose up --build app-prod",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:unit": "jest ./tests/unit/**/*.test.ts",
    "test:int": "jest tests/integration/**/*.test.ts",
    "test:report": "jest --coverage && open coverage/lcov-report/index.html",
    "re-git": "rm -rf .git && git init && git add . && git commit -m 'chore: initial template'"
  },
  "dependencies": {
    "@trivago/prettier-plugin-sort-imports": "^5.2.1",
    "axios": "^1.7.2",
    "colors": "^1.4.0",
    "concurrently": "^8.2.2",
    "cors": "^2.8.5",
    "express": "^4.19.2",
    "express-async-errors": "^3.1.1",
    "express-fileupload": "^1.5.1",
    "mongoose": "^8.9.3",
    "uuid": "^10.0.0",
    "winston": "^3.13.1",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.3.0",
    "@commitlint/config-conventional": "^19.2.2",
    "@logtail/node": "^0.4.21",
    "@logtail/winston": "^0.4.21",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/express-fileupload": "^1.5.0",
    "@types/jest": "^29.5.13",
    "@types/morgan": "^1.9.9",
    "@types/node": "^20.14.10",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^7.16.1",
    "@typescript-eslint/parser": "^7.16.1",
    "dotenv": "^16.4.5",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "husky": "^9.0.11",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.7",
    "morgan": "^1.10.0",
    "nodemon": "^3.1.4",
    "prettier": "^3.3.3",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.5.3"
  },
  "lint-staged": {
    "*.{js,ts}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": "prettier --write"
  }
}
